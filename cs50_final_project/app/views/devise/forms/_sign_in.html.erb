<h1 class="title">Sign in</h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<%= f.label :username %>
  <%= f.text_field :username, required: true, autofocus: true, maxlength: 16, minlength: 3 %>
  <%= f.label :password %>
  <%= f.password_field :password, required: true, maxlength: 128, minlength: 6 %>
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>

  <center>
  	<%= f.submit 'Sign in', class: 'style1' %>

  	<% if action_name != 'home' %>
	  	<br/>
			<p style="margin-top: 10px;"><%= link_to "Sign up", new_registration_path(resource_name) %></p>
		<% end %>
  </center>
<% end %>
