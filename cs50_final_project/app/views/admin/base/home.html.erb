<% title('Control Panel') %>

<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="control-panel">
        <div class="row">
          <div class="col-lg-12 col-md-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">Admins</h4>
              </div>

              <div class="panel-body">
                <div class="table-responsive">
                  <table class="table">
                    <tr>
                      <th>ID</th>
                      <th>Username</th>
                      <th>Sign in count</th>
                      <th>Last sign in</th>
                      <th>Created at</th>
                    </tr>

                    <% @admins.each do |admin| %>
                      <tr>
                        <td><%= link_to admin.id, edit_admin_user_path(admin) %></td>
                        <td><%= admin.username %></td>
                        <td><%= admin.sign_in_count %></td>
                        <% unless admin.last_sign_in_at.nil? %>
                          <td><%= admin.last_sign_in_at.strftime("%Y-%m-%d | %H:%M:%S") %></td>
                        <% else %>
                          <td>Never</td>
                        <% end %>
                        <td><%= admin.created_at.strftime("%Y-%m-%d | %H:%M:%S") %></td>
                      </tr>
                    <% end %>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
      	<div class="col-lg-4 col-md-4">
          <p class="lead">Users count:</p>
          <h4><%= link_to "Users", admin_users_path %> <small>- <%= pluralize(@users_count, 'user') %></small></h4>
          <hr />
        </div>

        <div class="col-lg-4 col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">Last Sign ins</h4>
            </div>

            <div class="panel-body">
              <div class="table-responsive">
                <table class="table">
                  <% @last_signins.each do |user| %>
                    <tr>
                      <td><%= link_to user.username, edit_admin_user_path(user) %></td>
                      <td>
                        <% unless user.last_sign_in_at.nil? %>
                          <%= user.last_sign_in_at.strftime("%Y-%m-%d | %H:%M:%S") %>
                        <% else %>
                          أبداً
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </table>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-4 col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">Last Sign ups</h4>
            </div>

            <div class="panel-body">
              <div class="table-responsive">
                <table class="table">
                  <% @last_signups.each do |user| %>
                    <tr>
                      <td><%= link_to user.username, edit_admin_user_path(user) %></td>
                      <td><%= user.created_at.strftime("%Y-%m-%d | %H:%M:%S") %></td>
                    </tr>
                  <% end %>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
